<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IcosahedronMultipurposeApp.Views.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IcosahedronMultipurposeApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <CommandBar Grid.Row="0" HorizontalAlignment="Left" DefaultLabelPosition="Right">
            <AppBarButton Label="Edit" Icon="Edit"></AppBarButton>
        </CommandBar>
        <PersonPicture Grid.Row="1" DisplayName="Display name" HorizontalAlignment="Left" VerticalAlignment="Top"></PersonPicture>
        <TextBlock Grid.Row="2" Style="{StaticResource BaseTextBlockStyle}" Text="Display Name"></TextBlock>
        <TextBlock Grid.Row="3" Style="{StaticResource BodyTextBlockStyle}" Text="About me"></TextBlock>
    </Grid>
</Page>
